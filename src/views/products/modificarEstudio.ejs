<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head.ejs") %>

    <body>
        <%- include("../partials/header.ejs") %>

            <main>
                <!-- MUESTRO TODOS LOS ERRORES ARRIBA DEL FORMULARIO -->
                <div>
                   <% if(locals.errors){ %>
                        <% for(let error in locals.errors ){ %>
                            <p><%= locals.errors[error].msg %></p>
                    <% }} %>                   
                </div>                 

                <div class="crear-estudio">
                    <div class="form">
                        <form action="/estudios/actualizar/<%= estudio.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                            <!--Para que envie archivos-->
                            <h2>Modificando el estudio con id #
                                <%=estudio.id%>
                            </h2>
                            <img src="/img/estudios_imagenes/<%=estudio.img%>" alt="<%= estudio.title %>" id="producto-detalle" width="50%" />
                            </br>
                            <label for="title">Título de Estudio</label>
                            <input type="text" name="title" id="title" value="<%=estudio.titulo.trim()%>">
                            </br>
                            <label for="desc">Descripción</label>
                            <textarea name="desc" id="desc"><%=estudio.descripcion.trim()%></textarea>
                            </br>
                            <label for="antes">Antes</label>
                            <textarea name="antes" id="antes"><%=estudio.antes%></textarea>
                            </br>
                            <label for="option">Opción</label>
                            <input type="text" name="option" id="option" value="<%=estudio.option%>">
                            </br>
                            <label for="price">Precio</label>
                            <input type="text" name="price" id="price" value="<%=estudio.precio%>">
                            </br>
                            <label for="imagenEstudio">Imagen del Producto</label>
                            <input type="file" name="imagenEstudio" id="imagenEstudio" value="<%=estudio.img%>">
                            </br>

                            <button type="submit">Modificar Estudio</button>
                        </form>
                    </div>
                </div>
            </main>

            <%- include("../partials/footer.ejs") %>
    </body>

</html>