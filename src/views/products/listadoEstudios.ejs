<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head.ejs") %>

    <body>
        <%- include("../partials/header.ejs") %>
            <main>

                <h2 class="lista-prod">Listado de Estudios</h2>

                <% for (const estudio of estudios) { %>
                    <a href="/estudios/estudio-detalle/<%=estudio.id%> ">
                        <section class="estudio-comp">
                            <img src="/img/estudios_imagenes/<%=estudio.img%>" alt="<%= estudio.title %>" id="producto-detalle" class="img-prod" />
                            <div class="titulo-descr">
                                <h3>
                                    <%= estudio.title %>
                                </h3>

                                <h4>
                                    <%= estudio.desc %>
                                </h4>
                            </div>
                            <!--</a>-->
                        </section>
                    </a>
                    <%}%>


            </main>
            <%- include("../partials/footer.ejs") %>
    </body>

</html>