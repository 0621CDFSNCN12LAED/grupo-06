<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head.ejs") %>

    <body>
        <%- include("../partials/header.ejs") %>
            <main>
                <!-- MUESTRO TODOS LOS ERRORES ARRIBA DEL FORMULARIO -->
                <div>
                    <% if(locals.errors){ %>
                         <% for(let error in locals.errors ){ %>
                             <p><%= locals.errors[error].msg %></p>
                     <% }} %>                   
                 </div>

                <div class="login-page">
                    <div class="form">
                        <form class="login-form" action="/users/login" method="POST">
                            <div>
                                <input id="email" name="email" type="email" placeholder="email" value="<%= locals.old ? old.email : null %>" />
                            </div>
                            <div>
                                <input type="password" name="password" type="password" placeholder="contraseña" />
                            </div>
                            <button type="submit">Ingresar</button>
                            <p class="message">
                                No registrado? <a href="/users/registro">Crear una cuenta</a>
                            </p>
                            <p class="message">
                                No recuerda la contraseña? <a href="#">Recuperar contraseña</a>
                            </p>
                        </form>
                    </div>
                </div>
            </main>
            <%- include("../partials/footer.ejs") %>
    </body>

</html>